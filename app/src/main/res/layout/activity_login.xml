<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:ignore="ExtraText">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_view_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_login"
                android:contentDescription="@string/todo"
                />
            <TextView
                android:id="@+id/tv_title_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/recoleta_regular"
                android:gravity="center"
                android:text="@string/gv_login_title"
                android:textColor="#000000"
                android:textSize="28sp"
                android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/tv_desc_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gv_login_desc"
            android:textAlignment="center"
            android:textSize="15sp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_regular"/>

        <Button
            android:id="@+id/btn_sign_up_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up_with_google"
            android:background="@drawable/btn_custom_login"
            android:textColor="#FFFFFF"
            android:layout_marginTop="36dp"
            android:fontFamily="@font/lato_regular"/>
    </LinearLayout>
</ScrollView>