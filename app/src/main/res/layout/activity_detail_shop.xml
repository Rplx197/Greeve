<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    tools:context=".DetailShopActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">
        <ImageView
            android:id="@+id/img_view_detail_shop"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"/>

        <RelativeLayout
            android:id="@+id/rl_hero_tutorial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/img_hero"
                android:layout_centerVertical="true"
                android:id="@+id/profile_image"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp" />
            <TextView
                android:id="@+id/tv_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Greeve"
                android:textColor="@android:color/black"
                android:layout_toEndOf="@+id/profile_image" />

            <TextView
                android:id="@+id/tv_writer_alamat"
                android:layout_toEndOf="@+id/profile_image"
                android:layout_below="@+id/tv_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Klaten, Jawa Tengah, Indonesia"
                android:textStyle="italic"
                android:textColor="#C4C4C4" />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="10dp"
            android:text="Hello"
            android:paddingLeft="16dp"
            android:id="@+id/tv_title_detail_shop"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_title_detail_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF5C00"
            android:textSize="18sp"
            android:paddingLeft="16dp"
            android:text="Rp. 11"/>
        <LinearLayout
            android:id="@+id/ln_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/tv_ukuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:text="Ukuran"/>
            <Button
                android:id="@+id/btn_ukuran_satu"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:text="XL"
                android:background="@color/common_google_signin_btn_text_dark_default"
                />
            <Button
                android:id="@+id/btn_ukuran_dua"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:text="L"
                android:background="@color/common_google_signin_btn_text_dark_default"
                />
            <Button
                android:id="@+id/btn_ukuran_tiga"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:text="M"
                android:background="@color/common_google_signin_btn_text_dark_default"
                />
            <Button
                android:id="@+id/btn_ukuran_empat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:text="S"
                android:background="@color/common_google_signin_btn_text_dark_default"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_warna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:text="Warna"/>
            <Button
                android:id="@+id/btn_warna_satu"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="19dp"
                android:text="Hitam"
                android:background="@color/common_google_signin_btn_text_dark_default"
                />
            <Button
                android:id="@+id/btn_warna_dua"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:text="Putih"
                android:background="@color/common_google_signin_btn_text_dark_default"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_jumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:text="Jumlah"/>

            <EditText
                android:id="@+id/ed_jumlah_hasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="1"
                android:inputType="number"
                android:textSize="18sp"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="16dp"
            android:text="Informasi Produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Berat"/>

                <TextView
                    android:id="@+id/tv_nilai_berat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="125 gram"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="12dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kondisi"/>

                <TextView
                    android:id="@+id/tv_nila_kondisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Baru"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="12dp"
                    />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"/>

                <TextView
                    android:id="@+id/tv_nilai_kategori"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sepatu"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="12dp"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bahan"/>

                <TextView
                    android:id="@+id/tv_nilai_bahan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kemasan Bekas"
                    android:textColor="@android:color/black"
                    android:layout_marginLeft="12dp"
                    />
            </TableRow>
        </TableLayout>
        <TextView
            android:layout_marginLeft="16dp"
            android:text="Deskripsi Produk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_desc_detail_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sepatu dengan kreatifitas tanpa batas"
            android:layout_marginLeft="16dp"/>
        <Button
            android:id="@+id/btn_beli"
            android:layout_marginTop="12dp"
            android:text="Beli"
            style="@style/ButtonGeneral"/>
    </LinearLayout>

</ScrollView>